rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read ALL user documents (for leaderboards)
    // But can only WRITE to their own document
    match /users/{userId} {
      allow read: if request.auth != null;  // Anyone authenticated can read
      allow write: if request.auth != null && request.auth.uid == userId;  // Only owner can write
    }
    
    // All authenticated users can read challenges, events, achievements, shop
    match /challenges/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Only admins via Admin SDK
    }
    
    match /events/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /achievements/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /shop/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}

